{{- $os := "" -}}
{{- if eq .chezmoi.os "linux" -}}
  {{- $os = "linux" -}}
{{- else if eq .chezmoi.os "darwin" -}}
  {{- $os = "macos" -}}
{{- end -}}

{{- $arch := "" -}}
{{- if eq .chezmoi.arch "amd64" -}}
  {{- $arch = "x64" -}}
{{- else -}}
  {{- $arch = .chezmoi.arch -}}
{{- end -}}

.local/bin/mise:
  type: file
  url: "https://mise.jdx.dev/mise-latest-{{- $os -}}-{{- $arch -}}"
  executable: true
  refreshPeriod: 168h
