set nocompatible

syntax on
set modelines=0

set number
set belloff=all

set encoding=utf-8

set mouse=a
set splitbelow
set splitright
set wrap
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround

set scrolloff=3
set backspace=indent,eol,start
set matchpairs+=<:>

set completeopt+=menuone,noselect
set shortmess+=c

set hidden
set cursorline
set t_Co=256
set termguicolors

call plug#begin('~/.vim/plugged')
" Features
  Plug 'tpope/vim-fugitive'
  Plug 'tpope/vim-endwise'
  Plug 'tpope/vim-commentary'
  Plug 'tpope/vim-surround'

  Plug 'maralla/completor.vim'
  Plug '~/.fzf'

  Plug 'vim-airline/vim-airline'

" Syntax highlighting
  Plug 'sheerun/vim-polyglot'
  Plug 'isobit/vim-caddyfile'

" Color scheme
  Plug 'danilo-augusto/vim-afterglow'
call plug#end()


set background=dark
colorscheme afterglow

